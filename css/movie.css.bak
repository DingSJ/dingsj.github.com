body{
    background-color: #f7f7f7;
    padding:0px;
    margin:0px;
}
.content-body{
    height:auto;
    width:1000px;
    margin:0px auto;
    border:0px;
    /*border:1px solid #ff0000;*/
}

a {
    text-decoration: none;
}

.content-body  .title-img{
    float: left;
}

.content-body .title-title{
    float: left;
    color: #00ff00;
    line-height: 40px;
    font-size: 24px;
    /*border:1px solid #82ff70;*/
    margin-left: -100px;
    font-weight: 400;
}
 .title-title-right {
     float: right;
 }

 .title-title-right span{
     line-height: 40px;
     margin-right: 20px;
     color: #70e165;
 }

.content-body .m-top video{
    height:566px;
    width:1000px;
}

