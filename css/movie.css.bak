.content-body .movie .m-bottom{
    margin-top:0px;
    width:1000px;
    height:60px;
    background-color: #383c38;
}

.content-body .movie .m-bottom-left{
    float: left;
}

.content-body .movie .m-bottom-left span{
    line-height: 60px;
    margin-left:20px;
